{
    "name": "GoodData Dev",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Various helpers for GoodData client development and testing.",
    "background": {
    	"scripts": ["lib.js", "omnibox.js", "background.js"]
    },
    "omnibox": { "keyword" : "gdc" },
    "content_scripts": [{
        "matches": ["*://*/gdc/md/*"],
        "js": [
            "jquery-1.8.2.min.js",
            "codemirror/codemirror.js",
            "codemirror/javascript.js",
            "dashboard_editor.js"
        ],
        "css": ["dashboard_editor.css", "codemirror/codemirror.css"]
    }],
    "permissions": ["contextMenus", "tabs"],
    "icons": {
        "16": "gooddata16.ico"
    }
}
